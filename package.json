{
  "name": "@hoiltd/azmp-plugin-vm",
  "version": "2.1.0",
  "description": "Virtual Machine plugin for Azure Marketplace Generator with High Availability Clusters, Azure SDK Integration, Workbooks, Cost Optimization, Disaster Recovery, Extensions, Security, Identity, Enterprise Scaling, and Azure Monitor Observability features",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run copy:templates",
    "copy:templates": "mkdir -p dist/templates && cp -r src/templates/* dist/templates/",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:slow": "jest --testMatch='**/*.slow.test.ts'",
    "test:all": "jest --testMatch='**/*.test.ts'",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "azure",
    "marketplace",
    "virtual-machine",
    "vm",
    "azure-marketplace-generator",
    "plugin"
  ],
  "author": "HOME OFFICE IMPROVEMENTS LTD",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HOME-OFFICE-IMPROVEMENTS-LTD/azmp-plugin-vm.git"
  },
  "peerDependencies": {
    "commander": "^12.0.0",
    "handlebars": "^4.7.0"
  },
  "peerDependenciesMeta": {
    "handlebars": {
      "optional": true
    },
    "commander": {
      "optional": true
    }
  },
  "dependencies": {
    "@azure/arm-compute": "^21.0.0",
    "@azure/arm-monitor": "^7.0.0",
    "@azure/identity": "^4.0.0",
    "vhd": "^0.5.0"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "commander": "^14.0.1",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ]
}
