{
  "vmName": "secure-vm",
  "vmSize": "Standard_D2s_v5",
  "location": "eastus",
  "adminUsername": "azureuser",
  "authenticationType": "sshPublicKey",
  "osImageReference": {
    "publisher": "Canonical",
    "offer": "0001-com-ubuntu-server-jammy",
    "sku": "22_04-lts-gen2",
    "version": "latest"
  },
  "storageAccountType": "Premium_LRS",
  "enableAcceleratedNetworking": true,
  "securityType": "TrustedLaunch",
  "secureBootEnabled": true,
  "vTpmEnabled": true,
  "bootDiagnosticsEnabled": true,
  "createVirtualNetwork": true,
  "createPublicIP": true,
  "createNetworkSecurityGroup": true,
  "vnetAddressSpace": "10.0.0.0/16",
  "subnetAddressPrefix": "10.0.1.0/24",
  "networkSecurityGroupRules": [
    {
      "name": "SSH",
      "priority": 1000,
      "direction": "Inbound",
      "access": "Allow",
      "protocol": "Tcp",
      "sourcePortRange": "*",
      "destinationPortRange": "22",
      "sourceAddressPrefix": "*",
      "destinationAddressPrefix": "*"
    }
  ],
  "description": "Secure Ubuntu VM with Trusted Launch, Accelerated Networking, and Boot Diagnostics",
  "author": "HOME OFFICE IMPROVEMENTS LTD"
}
